         volume       = "8",
         number       = "2",
         pages        = "185-199",
         url          = "https://journal.r-project.org/archive/2016/RJ-2016-040/index.html",
         
         textVersion  =
           paste("Victor Chernozhukov, Chris Hansen, Martin Spindler (2016).",
                 "hdm: High-Dimensional Metrics",
                 "R Journal, 8(2), 185-199.",
                 "URL https://journal.r-project.org/archive/2016/RJ-2016-040/index.html.")
